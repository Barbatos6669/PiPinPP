@PACKAGE_INIT@

# PiPinPP - Modern Raspberry Pi GPIO Library
# This file allows downstream projects to use find_package(PiPinPP)

# Find required dependencies
include(CMakeFindDependencyMacro)
find_dependency(PkgConfig REQUIRED)
pkg_check_modules(GPIOD REQUIRED libgpiod>=2.0)

# Include the targets file
include("${CMAKE_CURRENT_LIST_DIR}/PiPinPPTargets.cmake")

# Check that all required components are present
check_required_components(PiPinPP)

# Provide informational message
if(NOT PiPinPP_FIND_QUIETLY)
    message(STATUS "Found PiPinPP: ${PACKAGE_PREFIX_DIR}")
endif()
